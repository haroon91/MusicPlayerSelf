<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/rl_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingRight="4dp"
        android:layout_weight="0.8">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/songs"
            app:border_width="1dp"
            app:border_color="@color/sea_green"
            android:id="@+id/iv_song_image"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/tv_song_title"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="It's my Life and I am gonna get it done"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/iv_song_image"
            android:layout_marginLeft="14dp"
            android:layout_alignBottom="@+id/iv_song_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_song_title"
            android:layout_alignLeft="@+id/tv_song_title"
            android:layout_alignStart="@+id/tv_song_title" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_song_artist"
                android:text="Bon Jovi"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/gray"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="8dp"
        android:id="@+id/rl_more">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:src="@drawable/more"
        android:layout_marginLeft="4dp"
        android:layout_centerInParent="true" />

    </RelativeLayout>

</LinearLayout>