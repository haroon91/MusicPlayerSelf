<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/black"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_list_image"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/playlist"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tv_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="Playlists"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_list_image"
        android:layout_toEndOf="@+id/iv_list_image"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/iv_list_image" />

    <ImageView
        android:id="@+id/iv_list_select"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/selection_arrow"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--<View-->
        <!--android:layout_width="match_parent"-->
